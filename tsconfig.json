{
	"extends": "fastify-tsconfig",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@contracts/*": ["./solidity/contracts/*"],
			"@hardhat/*": ["./src/lib/hardhat/*"],
		},
		"allowJs": true,
		"declaration": false,
		"outDir": "dist",
		"target": "es2020",
		"module": "commonjs",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": false,
		"skipLibCheck": true
	},
	"include": ["api/**.*.ts", "src/**/*.ts", "src/**/*.js", "solidity/**/*.*", "hardhat.config.ts"],
	"exclude": ["./**.*"],
	"files": ["./hardhat.config.ts"]
}
