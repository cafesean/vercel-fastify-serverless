{
	"extends": "fastify-tsconfig",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@contracts/*": ["solidity/contracts/*"]
		},
		"allowJs": true,
		"declaration": false,
		"outDir": "dist",
		"target": "es2020",
		"module": "commonjs",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": false,
		"skipLibCheck": true
	},
	"include": ["api/**.*.ts", "src/**/*.ts", "src/**/*.js", "solidity/**/*.*"],
	"files": ["./solidity/hardhat.config.ts"]
}
