{
	"extends": "fastify-tsconfig",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@contracts/*": ["contracts/*"]
		},
		"allowJs": true,
		"declaration": false,
		"outDir": "dist",
		"target": "es2020",
		"module": "commonjs",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": false,
		"skipLibCheck": true
	},
	"include": ["**/*.ts", "*.ts", "*.js", "ethers/**/*.sol", "ethers/**/*.json"],
	"files": ["./hardhat.config.ts"]
}
